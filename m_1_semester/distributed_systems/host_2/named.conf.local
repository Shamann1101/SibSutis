zone "zone1.local" IN {

    type slave;

    file "/etc/bind/forward.zone1.local.db";

    masters { 192.168.0.10; };

    allow-notify { 192.168.0.10; };

};

zone "zone2.local" IN {

     type master;

     file "/etc/bind/forward.zone2.local.db";

     allow-update { none; };

};

