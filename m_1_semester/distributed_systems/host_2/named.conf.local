zone "0.168.192.in-addr.arpa" IN { //Reverse lookup name, should match your network in reverse order

    type slave;

    file "/etc/bind/reverse.zone1.local.db";

    masters { 192.168.0.10; };

    allow-notify { 192.168.0.10; };

};

